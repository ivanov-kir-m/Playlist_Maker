<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginLeft">@dimen/am_btn_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/main_ident</item>
        <item name="android:layout_marginRight">@dimen/am_btn_margin_left_right</item>
        <item name="android:layout_marginBottom">@dimen/main_ident</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_head_txt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="MainTitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_head_txt</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="MenuItemsStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="trackTint">@color/color_bg_blue</item>
        <item name="thumbTint">@color/switch_track</item>
    </style>

    <style name = "SearchTextEdit">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
    </style>

    <style name="SearchIcStyle">
        <item name="tint">?attr/colorSecondaryVariant</item>
        <item name="android:background">@null</item>
    </style>
</resources>