<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    android:padding="@dimen/main_ident">

    <TextView
        style="@style/MainTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_ident"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/amBtnSearch"
        style="@style/ButtonMainStyle"
        android:layout_weight="1"
        android:text="@string/search_msg"
        app:icon="@drawable/search" />

    <Button
        android:id="@+id/amBtnMedia"
        style="@style/ButtonMainStyle"
        android:layout_weight="1"
        android:text="@string/am_btn_media_library_name"
        app:icon="@drawable/music" />

    <Button
        android:id="@+id/amBtnSettings"
        style="@style/ButtonMainStyle"
        android:layout_weight="1"
        android:text="@string/am_btn_settings_name"
        app:icon="@drawable/settings" />
</LinearLayout>