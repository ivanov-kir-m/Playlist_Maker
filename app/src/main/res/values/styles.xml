<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginLeft">@dimen/am_btn_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/main_indent</item>
        <item name="android:layout_marginRight">@dimen/am_btn_margin_left_right</item>
        <item name="android:layout_marginBottom">@dimen/main_indent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_head_txt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/main_title</item>
        <item name="android:textColor">@color/main_icn</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icn_padding</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="iconTint">@color/main_icn</item>
    </style>

    <style name="MenuTitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_head_txt</item>
        <item name="android:layout_marginBottom">@dimen/main_indent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:padding">@dimen/padding_search_frame</item>
        <item name="android:minHeight">@dimen/main_height</item>
    </style>

    <style name="MenuItemsStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="drawableTint">@color/menu_items_color</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="trackTint">@color/switch_thumb</item>
        <item name="thumbTint">@color/switch_track</item>
    </style>

    <style name="SearchTextEdit">
        <item name="android:textColor">@color/main_icn</item>
        <item name="android:textColorHint">@color/items_color</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
    </style>

    <style name="TrackNameTxt">
        <item name="android:textColor">@color/items_color</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistNameTxt">
        <item name="android:textColor">@color/items_color</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/artist_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DefaultIcn">
        <item name="tint">@color/default_icn</item>
        <item name="android:background">@null</item>
    </style>

    <style name="errorText">
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaylistMakerPrimaryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/error_btn_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="SearchTitle">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/error_btn_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayerTextTrackName">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/size_head_txt</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerTextArtistName">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/error_btn_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerInfoTitle">
        <item name="android:textColor">@color/main_grey</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/player_info</item>
        <item name="android:layout_marginTop">@dimen/margin_player_text</item>
        <item name="android:layout_marginStart">@dimen/margin_player_text</item>
    </style>

    <style name="PlayerInfo">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/player_info</item>
        <item name="android:layout_marginEnd">@dimen/margin_player_text</item>
        <item name="android:layout_marginStart">@dimen/margin_player_text</item>
        <item name="android:layout_marginTop">@dimen/margin_player_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="PlayTime">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/play_time</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!--    MediaLibrary -->

    <style name="MediaTabs">
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/play_time</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/MediaTabs</item>
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="tabTextColor">@color/tab_indicator_color</item>
    </style>

    <style name="BottomNavTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/navigate_text_size</item>
    </style>


    <style name="NewPlaylistTextEdit" >
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
        <item name="android:paddingStart">@dimen/padding_et_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_et_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_et_top</item>
        <item name="android:paddingBottom">@dimen/padding_et_bot</item>
    </style>

    <style name="CreateBtn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/size_item_txt</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@drawable/button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding_btn</item>
        <item name="android:paddingBottom">@dimen/padding_btn</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterTextColor">@color/menu_items_color</item>
        <item name="boxStrokeColor">@color/color_pb</item>
        <item name="hintTextColor">@color/color_pb</item>
        <item name="prefixTextColor">@color/color_pb</item>
        <item name="colorControlActivated">@color/color_pb</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">@null</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>

    <style name="TextPlaylistItem">
        <item name="android:gravity">top</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/navigate_text_size</item>
        <item name="android:textColor">@color/playlist_item_text</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/main_icn</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_pb</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_pb</item>
    </style>
</resources>